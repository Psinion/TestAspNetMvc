@using TestAspNetMvc.ViewModels;
@model DepartmentsViewModel

@{

}

<h4>Отделы:</h4>
<a class="btn" href="Departments/DepartmentEdit">Создать</a>
@{
    foreach (var department in Model.Departments)
    {
        <div class="card">
            <div class="card-content">
                <span class="card-title">@department.Name</span>
            </div>
            <div class="card-action">
                <a href="Departments/DepartmentEdit/@department.Id">Изменить</a>
                <a href="Departments/DepartmentEdit/@department.Id">Удалить</a>
            </div>
        </div>
    }
}