@using TestAspNetMvc.ViewModels;
@model UsersViewModel

@{

}

<h4>Пользователи:</h4>
<a class="btn" href="~/Users/UserEdit">Создать</a>
@{
    foreach (var user in Model.Users)
    {
        <div class="card">
            <div class="card-content">
                <span class="card-title">@user.UserName</span>

                <p>Зарплата: @user.Salary.ToString("C")</p>
                <p>Отдел: @user.Department.Name</p>

                <h5>Компьютер #@user.PC.Id</h5>
                <p>Частота процессора: @user.PC.Cpu MHz</p>
                <p>Оперативная память: @user.PC.Memory Mb</p>
                <p>Жёсткий диск: @user.PC.Hdd Gb</p>
            </div>
            <div class="card-action">
                <a href="~/Users/UserEdit/@user.Id">Изменить</a>
            </div>
        </div>
    }
}